}

.dialogue-control-btn:active {
    border: 1px inset #c0c0c0;
}

.dialogue-box.hidden {
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
}

.vn-dialogue-content {
    position: relative;
    height: calc(100% - 20px);
    padding: 0;
}

.vn-character-info {
    position: absolute;
    top: 8px;
    left: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
