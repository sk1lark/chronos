    max-width: 100%;
    max-height: 100%;
    border: 1px solid #000;
}

.alert-icon {
    font-size: 48px;
    color: #f00;
    border: 2px solid #000;
    width: 60px;
    height: 60px;
    line-height: 60px;
    border-radius: 50%;
    margin: 0 auto 15px;
    background-color: #fff;
}

#alert-ok-btn {
    padding: 5px 15px;
    border: 2px solid #000;
    background-color: #c0c0c0;
    box-shadow: 1px 1px 0px #000;
}

.hidden {
    display: none;
}

/* Calculator styles */
.calculator-content {
    background-color: #c0c0c0;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.calculator-display {
    width: 100%;
    max-width: 200px;
    height: 40px;
    background-color: #000;
    color: #00ff00;
    font-family: 'Courier New', monospace;
    font-size: 18px;
    text-align: right;
    padding: 5px 10px;
    border: 2px inset #808080;
    margin-bottom: 10px;
    overflow: hidden;
}

.calculator-buttons {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 5px;
    max-width: 200px;
}

.calc-btn {
    width: 40px;
    height: 40px;
    background: linear-gradient(#e0e0e0, #c0c0c0);
    border: 2px outset #ffffff;
    font-family: 'Courier New', monospace;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

.calc-btn:active {
    border: 2px inset #ffffff;
}

.calc-op {
    background: linear-gradient(#f0f0f0, #d0d0d0);
}

.calc-equals {
    background: linear-gradient(#0080ff, #004080);
    color: white;
}

.calc-clear {
    background: linear-gradient(#ff8080, #c04040);
    color: white;
}

/* Paint styles */
.paint-content {
    background-color: #c0c0c0;
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.paint-toolbar {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
    padding: 5px;
    background: linear-gradient(#e0e0e0, #c0c0c0);
    border: 2px inset #808080;
}

.paint-tool {
    width: 32px;
    height: 32px;
    border: 2px outset #ffffff;
    background: linear-gradient(#e0e0e0, #c0c0c0);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
}

.paint-tool:active {
    border: 2px inset #ffffff;
}

#paint-canvas {
    border: 2px inset #808080;
    background: white;
    cursor: crosshair;
}

/* Solitaire styles */
.solitaire-content {
    background-color: #008000;
    padding: 10px;
    display: flex;
    flex-direction: column;
}

.solitaire-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    background: linear-gradient(#e0e0e0, #c0c0c0);
    padding: 5px;
    border: 2px inset #808080;
}

#solitaire-new {
    padding: 5px 10px;
    border: 2px outset #ffffff;
    background: linear-gradient(#e0e0e0, #c0c0c0);
    cursor: pointer;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 12px;
}

#solitaire-score {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 12px;
    font-weight: bold;
}

#solitaire-board {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.solitaire-foundations {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
}

.foundation {
    width: 80px;
    height: 100px;
    background: linear-gradient(#008000, #004000);
    border: 2px outset #ffffff;
    border-radius: 5px;
    position: relative;
}

.solitaire-tableau {
    display: flex;
    justify-content: space-between;
    gap: 5px;
}

.tableau-column {
    width: 80px;
    min-height: 100px;
    background: linear-gradient(#008000, #004000);
    border: 2px outset #ffffff;
    border-radius: 5px;
    position: relative;
}

.solitaire-stock {
    display: flex;
    gap: 10px;
    align-self: flex-start;
}

#stock-pile, #waste-pile {
    width: 80px;
    height: 100px;
    background: linear-gradient(#008000, #004000);
    border: 2px outset #ffffff;
    border-radius: 5px;
    position: relative;
    cursor: pointer;
}

.card {
    width: 70px;
    height: 95px;
    background: white;
    border: 1px solid #000;
    border-radius: 3px;
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2px;
    font-size: 12px;
    font-family: 'Courier New', monospace;
    cursor: pointer;
    user-select: none;
}

.card.red { color: red; }
.card.black { color: black; }

.card-face-up {
    background: linear-gradient(white, #f0f0f0);
}

.card-face-down {
    background: linear-gradient(#008000, #004000);
    border: 2px outset #ffffff;
}

.card-value {
    font-weight: bold;
    align-self: flex-start;
}

.card-suit {
    align-self: flex-end;
    font-size: 16px;
}

/* Notepad Styles */
.notepad-content {
    padding: 0;
    height: 100%;
}

#notepad-textarea {
    width: 100%;
    height: 100%;
    border: none;
    padding: 4px;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    background: #fff;
    color: #000;
    resize: none;
    outline: none;
}

/* File Manager Styles */
.filemanager-content {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.filemanager-toolbar {
    display: flex;
    align-items: center;
    padding: 4px;
    background: #c0c0c0;
    border-bottom: 1px inset #fff;
}

#fm-back, #fm-up {
    margin-right: 4px;
    padding: 2px 6px;
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
    cursor: pointer;
}

#fm-path {
    flex: 1;
    padding: 2px 4px;
    background: #fff;
    border: 1px inset #c0c0c0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.filemanager-list {
    flex: 1;
    padding: 4px;
    background: #fff;
    overflow-y: auto;
}

.fm-item {
    display: flex;
    align-items: center;
    padding: 2px;
    cursor: pointer;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.fm-item:hover {
    background: #000080;
    color: #fff;
}

.fm-item.folder::before {
    content: "📁";
    margin-right: 4px;
}

/* Control Panel Styles */
.controlpanel-content {
    padding: 8px;
}

.cp-icons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 8px;
}

.cp-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8px;
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
    cursor: pointer;
    text-align: center;
}

.cp-icon:hover {
    background: #d0d0d0;
}

.cp-icon-img {
    font-size: 24px;
    margin-bottom: 4px;
}

.cp-icon-text {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 10px;
    color: #000;
}

/* System Properties Styles */
.systemproperties-content {
    padding: 0;
}

.tab-container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.tabs {
    display: flex;
    background: #c0c0c0;
    border-bottom: 1px solid #808080;
}

.tab {
    padding: 4px 12px;
    background: #c0c0c0;
    border: 1px solid #c0c0c0;
    border-bottom: none;
    cursor: pointer;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.tab.active {
    background: #fff;
    border-bottom: 1px solid #fff;
    margin-bottom: -1px;
}

.tab-content {
    display: none;
    padding: 8px;
    background: #fff;
    flex: 1;
    overflow-y: auto;
}

.tab-content.active {
    display: block;
}

.sys-info {
    display: flex;
    align-items: center;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid #c0c0c0;
}

.sys-logo {
    font-size: 32px;
    margin-right: 12px;
}

.sys-details h3 {
    margin: 0 0 4px 0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 14px;
}

.sys-details p {
    margin: 2px 0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    color: #666;
}

.sys-specs p {
    margin: 4px 0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.device-list {
    padding: 8px;
}

.device-item {
    padding: 2px 0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.perf-metrics {
    padding: 8px;
}

.perf-bar {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
}

.perf-bar label {
    width: 100px;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.progress-bar {
    flex: 1;
    height: 12px;
    background: #c0c0c0;
    border: 1px inset #c0c0c0;
    margin: 0 8px;
}

.progress-fill {
    height: 100%;
    background: #008000;
}

/* Network Neighborhood Styles */
.network-content {
    padding: 8px;
}

.network-workgroups {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.workgroup {
    background: #fff;
    border: 1px inset #c0c0c0;
    padding: 8px;
}

.wg-icon {
    font-size: 20px;
    margin-bottom: 4px;
}

.wg-name {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 4px;
}

.wg-computers {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.computer {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    padding: 2px;
}

.wg-status {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    color: #800000;
    font-weight: bold;
}

/* Recycle Bin Styles */
.recyclebin-content {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.rb-toolbar {
    display: flex;
    gap: 4px;
    padding: 4px;
    background: #c0c0c0;
    border-bottom: 1px inset #fff;
}

.rb-toolbar button {
    padding: 2px 8px;
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
    cursor: pointer;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
}

.rb-files {
    flex: 1;
    padding: 4px;
    background: #fff;
    overflow-y: auto;
}

.rb-item {
    padding: 2px;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    cursor: pointer;
}

.rb-item:hover {
    background: #000080;
    color: #fff;
}

/* My Computer Styles */
.mycomputer-content {
    padding: 8px;
}

.mc-drives {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.drive {
    display: flex;
    align-items: center;
    padding: 8px;
    background: #fff;
    border: 1px inset #c0c0c0;
}

.drive-icon {
    font-size: 24px;
    margin-right: 8px;
}

.drive-info {
    flex: 1;
}

.drive-name {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 2px;
}

.drive-details {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 10px;
    color: #666;
}

/* Printers Styles */
.printers-content {
    padding: 8px;
}

.printer-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.printer-item {
    display: flex;
    align-items: center;
    padding: 8px;
    background: #fff;
    border: 1px inset #c0c0c0;
}

.printer-icon {
    font-size: 24px;
    margin-right: 8px;
}

.printer-info {
    flex: 1;
}

.printer-name {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 12px;
    font-weight: bold;
    margin-bottom: 2px;
}

.printer-status {
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 10px;
    color: #666;
}
